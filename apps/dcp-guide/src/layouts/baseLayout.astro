---
import { DefaultMicrositeLayout } from '@abgov/dcp-common';

import HeroImage from '../components/HeroImage.astro';
import HeroHome from '../components/HeroHome.astro';
import { globalCss } from '@abgov/dcp-common';
export interface Props {
  title: string;
}
const { title } = Astro.props;
---

<DefaultMicrositeLayout title="Welcome to DCP playbook.">
  {title !== 'Home' && <HeroImage title={title} />}

  {title == 'Home' && <HeroHome />}
  <slot />
</DefaultMicrositeLayout>
