---
import {
  GoAChip,
  GoAContainer,
  GoAGrid,
  GoASpacer,
} from '@abgov/react-components';
import ExternalLink from './ExternalLink.astro';

const { href, title, description, provider } = Astro.props;
---

<GoAContainer accent="thin">
  <a id="service-tile-title">{title}</a>
  <span id="service-tile-subtitle">{provider}</span>
  <GoASpacer vSpacing="m" />
  <p id="service-tile-content">
    {description}
  </p>

  <div>
    <b>Contact:</b>
    <ExternalLink text="ADSP platform" link="https://google.ca" />
  </div>
  <GoASpacer vSpacing="m" />
  <div id="service-tile-chips">
    <GoAChip mr="s" content="Chip Text" />
    <GoAChip mr="s" content="Chip Text" />
    <GoAChip mr="s" content="Chip Text" />
  </div>
</GoAContainer>

<style>
  a:link {
    text-decoration: none;
    color: var(--goa-color-interactive-default);
  }

  a:visited {
    text-decoration: none;
    color: var(--goa-color-interactive-default);
  }

  a:hover {
    text-decoration: underline;
    color: var(--goa-color-interactive-default);
  }

  a:active {
    text-decoration: underline;
    color: var(--goa-color-interactive-default);
  }
  #service-tile-chips {
    line-height: 2.75rem;
  }
  #service-tile-subtitle {
    color: var(--goa-color-text-secondary);
    font-size: 18px;
    font-style: normal;
    font-weight: 700;
    line-height: 28px;
  }
  #service-tile-title {
    font-size: 24px;
    font-style: normal;
    font-weight: 400;
    line-height: 32px;
    word-wrap: break-word;
  }
  #service-tile-content {
    width: 300px;
    display: block;
    word-wrap: break-word;
    font-size: 18px;
    font-style: normal;
    font-weight: 400;
    line-height: 28px;
  }
</style>
