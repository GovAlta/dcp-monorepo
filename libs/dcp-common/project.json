{
  "name": "dcp-common",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "libs/dcp-common",
  "projectType": "library",
  "targets": {
    "check": {
      "executor": "@nxtensions/astro:check"
    },
    "gen-astro":{
      "executor": "nx:run-commands",
      "parallel": false,
      "options": {
        "commands": [
          {
            "command": "npx nx g @nxtensions/astro:application {args.name}",
            "forwardAllArgs": true
          },
          {
            "command": " npx nx workspace-generator new-article --author={args.author}  --dry-run",
            "forwardAllArgs": true
          }
        ]
      }
    }
  },
  "tags": []
}
